<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey">


    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:onClick="reset"
        android:text="Reset"
        android:background="@color/yellow"/>


    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:context="com.exemple.android.taekwondoescore.MainActivity">

            <TextView
                android:background="@color/red"
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="12sp"
                android:text="Fighter 1"
                android:textColor="#616161"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:background="@color/red"
                android:text="3"
                android:textColor="#000000"
                android:textSize="56sp" />

            <Button
                android:id="@+id/addpoints3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="20dp"
                android:onClick="add_3_points"
                android:background="@color/red"
                android:text="+3 points" />

            <Button
                android:id="@+id/addpoints2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="add_2_points"
                android:background="@color/red"
                android:text="+2 points" />

            <Button
                android:id="@+id/addpoints1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="add_1_points"
                android:background="@color/red"
                android:text="+1 points" />
            <Button
                android:id="@+id/reducepoints1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="24dp"
                android:onClick="reduce_1_points"
                android:background="@color/red"
                android:text="-1 points" />

            <Button
                android:id="@+id/reducepoints2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="24dp"
                android:background="@color/red"
                android:onClick="reduce_2_points"
                android:text="-2 points" />
            <Button
                android:id="@+id/reducepoints3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="reduce_3_points"
                android:background="@color/red"
                android:text="-3 points" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:context="com.exemple.android.courtcounter.MainActivity">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="12sp"
                android:text="Fighter 2"
                android:textColor="#616161"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:background="@color/blue"
                android:text="3"
                android:textColor="#000000"
                android:textSize="56sp" />

            <Button
                android:id="@+id/addpoints3_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@color/blue"
                android:layout_marginTop="20dp"
                android:onClick="add_3_points_B"
                android:text="+3 points" />

            <Button
                android:id="@+id/addpoints2_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="24dp"
                android:background="@color/blue"
                android:layout_marginRight="24dp"
                android:onClick="add_2_points_B"
                android:text="+2 points" />

            <Button
                android:id="@+id/addpoints1_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="24dp"
                android:background="@color/blue"
                android:layout_marginRight="24dp"
                android:onClick="add_1_points_B"
                android:text="+1 point" />
            <Button
                android:id="@+id/reducepoints1_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/blue"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="reduce_1_points_B"
                android:text="-1 points" />

            <Button
                android:id="@+id/reducepoints2_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/blue"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="reduce_2_points_B"
                android:text="-2 points" />
            <Button
                android:id="@+id/reducepoints3_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:background="@color/blue"
                android:layout_marginRight="24dp"
                android:onClick="reduce_3_points_B"
                android:text="-3 points" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
